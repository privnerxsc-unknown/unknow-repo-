local Rayfield = loadstring(game:HttpGet("https://sirius.menu/rayfield"))()

	local Window = Rayfield:CreateWindow({
		Name = "PLANT BRAINROT SIMULATOR - nuarexsc",
		LoadingTitle = "PLANT BRAINROT SIMULATOR",
		LoadingSubtitle = "made by nuarexsc",
		ShowText = "nuarexsc",
		Theme = "Bloom",
		ToggleUIKeybind = Enum.KeyCode.K,
		ConfigurationSaving = { Enabled = false },
		KeySystem = false,
	})

local ShopTab = Window:CreateTab("Shop", "shopping-cart")
local SettingsTab = Window:CreateTab("Settings", "cog")

local Seeds = {
    "Tomato Seed",
    "Pumpkin Seed",
    "Melon Seed",
    "Mini Corn Seed",
    "Mushroom Seed",
    "Cactus Seed",
    "Broccoli Seed",
    "Sunflower Seed",
    "Chrysanthemum Seed",
    "Peashooter Seed",
    "Corn Seed",
    "Cactus Flower Seed",
    "Fire Peashooter Seed",
    "Threepeater Seed",
    "Man-Eating Flower Seed"
}

local AutoBuyEnabled = false
local SeedToggles = {}

for i = 1, #Seeds do
    SeedToggles[i] = false
end

ShopTab:CreateToggle({
    Name = "Enable Auto Buy",
    CurrentValue = false,
    Callback = function(v)
        AutoBuyEnabled = v
    end
})

for index, seedName in ipairs(Seeds) do
    ShopTab:CreateToggle({
        Name = seedName,
        CurrentValue = false,
        Callback = function(v)
            SeedToggles[index] = v
        end
    })
end

task.spawn(function()
    local ReplicatedStorage = game:GetService("ReplicatedStorage")

    while task.wait(0.25) do
        if not AutoBuyEnabled then continue end

        local remoteFolder = ReplicatedStorage:FindFirstChild("RemoteEvent")
        local remote = remoteFolder and remoteFolder:FindFirstChild("ServerRemoteEvent")
        if not remote then continue end

        for index, enabled in ipairs(SeedToggles) do
            if enabled then
                local args = {
                    [1] = "Buy_ArrayBool_Item",
                    [2] = "\231\167\141\229\173\144",
                    [3] = index
                }

                pcall(function()
                    remote:FireServer(unpack(args))
                end)

                task.wait(0.2)
            end
        end
    end
end)

SettingsTab:CreateToggle({
    Name = "Anti AFK",
    Callback = function()
        local vu = game:GetService("VirtualUser")
        game:GetService("Players").LocalPlayer.Idled:Connect(function()
            vu:Button2Down(Vector2.new(0, 0), workspace.CurrentCamera.CFrame)
            task.wait(1)
            vu:Button2Up(Vector2.new(0, 0), workspace.CurrentCamera.CFrame)
        end)
    end
})
